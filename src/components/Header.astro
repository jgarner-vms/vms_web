---
import { Icon } from "astro-icon/components";
---

<div
  class="sticky top-0 z-[1000] flex h-16 w-full justify-center backdrop-blur transition-all duration-500 text-base-content"
  id="animated-navbar"
>
  <div class="navbar">
    <div class="navbar-start">
      <label
        for="my-drawer"
        id="drawer-button"
        class="btn btn-square btn-ghost lg:hidden"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block w-5 h-5 stroke-current"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
      <a href="/" class="btn btn-ghost hidden lg:flex place-content-center">
        <Icon name="veritas" class="size-20" />
      </a>
    </div>
    <div class="navbar-center">
      <a href="/" class="btn btn-ghost lg:hidden">
        <Icon name="veritasheader" class="size-10" />
        <h1 class="lg:hidden text-base-content text-base" id="title">
          Veritas Managed Solutions, Inc.
        </h1></a
      >
      <ul
        class="hidden menu lg:menu-horizontal grow shrink menu-md overflow-y-visible"
      >
        <li><a class="py-3 text-base" id="home" href="/">Home</a></li>
        <li class="dropdown dropdown-hover dropdown-end">
          <a class="py-3 text-base" id="solutions" href="/projects">Solutions</a
          >
          <ul
            tabindex="0"
            class="dropdown-content z-[1] menu p-2 bg-neutral rounded-box w-52"
          >
            <li><a href="/data">Cable Infrastructure</a></li>
            <li><a href="/wireless">Wireless Services</a></li>
            <li><a href="/av">Audio and Visual</a></li>
            <li><a href="/security">Security Services</a></li>
            <li><a href="/IT">Information Technology</a></li>
            <li><a href="/managedservices">Managed Services</a></li>
            <li><a href="/electrical">Electrical</a></li>
            <li>
              <a href="/consultation">Consultation</a>
            </li>
          </ul>
        </li>
        <li>
          <a class="py-3 text-base" id="partners" href="/partners">Partners</a>
        </li>
        <li class="dropdown dropdown-hover dropdown-end">
          <a class="py-3 text-base" id="about" href="/about">Contact</a>
          <ul
            tabindex="0"
            class="dropdown-content z-[1] menu p-2 bg-neutral rounded-box w-52"
          >
            <li><a href="/about#contactinfo">About Us</a></li>
            <li><a href="/about#locations">Locations</a></li>
            <li><a href="/about#contactform">Contact Form</a></li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="navbar-end"></div>
  </div>
</div>

<style>
  #title {
    font-family: "EB Garamond", serif;
  }
</style>
