---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import ITcover from "../assets/featured/IT.jpg";
import IT1 from "../assets/install_pictures/IT/sammyayot254-knUZi7dzb58-unsplash.jpg";
import IT2 from "../assets/install_pictures/IT/markus-spiske-70Rir5vB96U-unsplash.jpg";
import IT3 from "../assets/install_pictures/IT/jainath-ponnala-9wWX_jwDHeM-unsplash.jpg";
import IT4 from "../assets/install_pictures/IT/samuel-ramos-tYvZUVEve6s-unsplash.jpg";
import IT5 from "../assets/install_pictures/IT/sammyayot254-vIQDv6tUHYk-unsplash.jpg";
import IT6 from "../assets/install_pictures/IT/ilya-pavlov-OqtafYT5kTw-unsplash.jpg";
---

<MainLayout>
  <!-- Container for demo purpose -->
  <div class="container my-8 lg:my-24 mx-auto md:px-6">
    <!-- Section: Design Block -->
    <section class="lg:mb-32">
      <!-- Jumbotron -->
      <div class="container mx-auto text-center lg:text-left xl:px-32">
        <div
          class="flex flex-col-reverse gap-2 lg:grid items-center lg:grid-cols-2"
        >
          <div class="mb-12 lg:mb-0">
            <div
              class="relative z-[1] block rounded-lg px-6 py-12 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] backdrop-blur-[30px] bg-base-200 shadow-black/20 md:px-12 lg:-mr-14"
            >
              <h2 class="mb-8 text-3xl font-bold">Information Technology</h2>
              <p class="mb-8 pb-2 text-neutral-300 lg:pb-0">
                <ul>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Server Systems</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Network Systems</strong
                    >
                  </li>
                  <li>
                    <strong class="font-semibold text-accent"
                      >Troubleshooting</strong
                    >
                  </li>
                </ul>
              </p>
            </div>
          </div>

          <div>
            <Image
              class="w-full rounded-lg shadow-lg shadow-black/20"
              src={ITcover}
              alt="Veritas data cabling installation"
            />
          </div>
        </div>
      </div>
      <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->
  </div>
  <!-- Container for demo purpose -->

  <div class="container mx-auto px-5 py-2 lg:px-32">
    <div class="-m-1 flex flex-wrap md:-m-2">
      <div class="flex w-1/2 flex-wrap">
        <div class="w-1/2 p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={IT1}
            alt="Veritas data cabling installation"
          />
        </div>
        <div class="w-1/2 p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={IT2}
            alt="Veritas data cabling installation"
          />
        </div>
        <div class="w-full p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={IT3}
            alt="Veritas data cabling installation"
          />
        </div>
      </div>
      <div class="flex w-1/2 flex-wrap">
        <div class="w-full p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={IT4}
            alt="Veritas data cabling installation"
          />
        </div>
        <div class="w-1/2 p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={IT5}
            alt="Veritas data cabling installation"
          />
        </div>
        <div class="w-1/2 p-1 md:p-2">
          <Image
            class="block h-full w-full rounded-lg object-cover object-center hover:scale-105 transition-all"
            src={IT6}
            alt="Veritas data cabling installation"
          />
        </div>
      </div>
    </div>
  </div>
</MainLayout>
