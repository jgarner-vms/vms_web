---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import wirelesscover from "../assets/featured/Wireless.jpeg";
import wireless1 from "../assets/install_pictures/wireless/1.png";
import wireless2 from "../assets/install_pictures/wireless/2.jpg";
import wireless3 from "../assets/install_pictures/wireless/3.jpg";
import wireless4 from "../assets/install_pictures/wireless/4.jpg";
import wireless5 from "../assets/install_pictures/wireless/5.jpg";
import wireless6 from "../assets/install_pictures/wireless/6.jpg";
import wireless7 from "../assets/install_pictures/wireless/7.jpg";
import wireless8 from "../assets/install_pictures/wireless/8.jpg";
